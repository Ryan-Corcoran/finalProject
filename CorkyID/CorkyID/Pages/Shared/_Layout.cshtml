<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CorkyID</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:#f7f7f7">
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow">
            <div class="container">
                <nav class="navbar navbar-light bg-white">
                    <a class="navbar-brand mb-0 h1" href="/Index">CorkyID</a>
                </nav>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        @if (ViewData["Title"] == "Home page")
        {
        <div class="container">
            <ul class="nav justify-content-center nav-fill" style="background-color:#f7f7f7">
                <li class="nav-item active">
                    <a class="nav-link" href="#featured">Featured</a>
                </li>
                <li class="nav-item bl">
                    <a class="nav-link" href="#fashion">Fashion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#food">Food/Drink</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#technology">Technology</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#travel">Travel</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#entertainment">Entertainment</a>
                </li>
            </ul>
        </div>
        }
    </header>
    <div class="container" style="margin-top: 125px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CorkyID - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
