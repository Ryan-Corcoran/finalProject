@model CorkyID.SchemeDeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h3>Are you sure you want to delete this scheme?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schemes.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schemes.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schemes.ValidFromDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schemes.ValidFromDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schemes.ValidToDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schemes.ValidToDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schemes.SchemeDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schemes.SchemeDescription)
        </dd>
    </dl>
    
    <form method="post">
        <a class=" btn btn-outline-success" asp-page="./SchemeDetails" asp-route-id="@Html.ValueFor(model => model.Schemes.SchemeID)">Cancel</a>
        <input type="hidden" asp-for="Schemes.SchemeID" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-left:20px" />

    </form>
</div>
