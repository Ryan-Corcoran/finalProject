<section id="featured">
    <hr />
    <h4>Featured Discounts</h4>
    <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" style="height:450px" src="~/img/nandosOffer.png" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Student exclusive offers at Nandos</h5>
                    <p>Show your corkyID in Nandos for fantastic discounts off food & drink.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height:450px" src="~/img/JDSportsOffer.png" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height:450px" src="~/img/Steakhouse.png" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <br />
    </div>
</section>

<section id="fashion">
    <hr />
    <h4>Fashion Discounts</h4>
    <br />
    <div class="card-columns">
        @foreach (var item in Model.Discounts)
        {
            @if (item.Category == "Fashion")
            {
                <div class="card" style="width: 320px; height: 375px">
                    <img class="card-img-top" src="@item.LogoURL" style="width:inherit;height:150px;" alt="Logo of business">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelitem => item.RetailerName)</h5>
                        <p class="card-text">@Html.DisplayFor(modelitem => item.DiscountDescription)</p>
                        <p class="card-text"><small class="text-muted">Last updated: @Html.DisplayFor(modelitem => item.LastUpdated)</small></p>
                        <a class="btn btn-primary mb-2" href="@item.RedirectURL">Get Now</a>
                    </div>
                </div>
            }
        }
    </div>
</section>
