@page
@model CorkyID.DiscountCreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4 class="text-center">Create New Discount</h4>

<hr />
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Discount.RetailerName" class="control-label"></label>
                    <input asp-for="Discount.RetailerName" class="form-control" />
                    <span asp-validation-for="Discount.RetailerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount.DiscountPercentage" class="control-label"></label>
                    <input asp-for="Discount.DiscountPercentage" class="form-control" />
                    <span asp-validation-for="Discount.DiscountPercentage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount.DiscountDescription" class="control-label"></label>
                    <textarea rows="10" cols="20" asp-for="Discount.DiscountDescription" class="form-control"></textarea>
                    <span asp-validation-for="Discount.DiscountDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount.ValidFrom" class="control-label"></label>
                    <input asp-for="Discount.ValidFrom" class="form-control">
                    <span asp-validation-for="Discount.ValidFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount.ValidTo" class="control-label"></label>
                    <input asp-for="Discount.ValidTo" class="form-control" />
                    <span asp-validation-for="Discount.ValidTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount.LogoURL" class="control-label"></label>
                    <input asp-for="Discount.LogoURL" class="form-control" />
                    <span asp-validation-for="Discount.LogoURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount.RedirectURL" class="control-label"></label>
                    <input asp-for="Discount.RedirectURL" class="form-control" />
                    <span asp-validation-for="Discount.RedirectURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount.Category" class="control-label"></label>
                    <select asp-for="Discount.Category" id="inputState" class="form-control">
                        <option selected>Choose...</option>
                        <option>Fashion</option>
                        <option>Food/Drink</option>
                        <option>Technology</option>
                        <option>Travel</option>
                        <option>Entertainment</option>
                    </select>
                </div>
                <span asp-validation-for="Discount.Category" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="Discount.DiscountViewRestrictions" class="control-label"></label>
                    <select asp-for="Discount.DiscountViewRestrictions" id="inputState" class="form-control">
                        <option selected>All Schemes</option>
                        @foreach (var item in Model.Schemes)
                        {
                            <option>@Html.DisplayFor(modelItem => item.Name)</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Discount.DiscountViewRestrictions" class="text-danger"></span>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-info" />
                    <a class="btn btn-outline-warning" style="margin-left:10px" asp-page="Index">Cancel</a>
                </div>
            </form>
        </div>      
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
